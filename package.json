{
  "name": "taskspire",
  "description": "taskspire - Kanban Pomodoro AI",
  "version": "1.0.0",
  "license": "ISC",
  "main": "main.js",
  "author": "David Giagnocavo <taskspire@gmx.com> (taskspire.xyz)",
  "build": {
    "appId": "xyz.taskspire",
    "linux": {
      "target": "pacman",
      "category": "productivity tool",
      "icon": "favicon-32x32.png"
    }
  },
  "scripts": {
    "start": "vite",
    "build": "vite build --config vite.config.ts",
    "start-electron": "vite build --config vite.config.ts && electron .",
    "build-electron": "vite build --config vite.config.ts && electron-builder -wml",
    "preview": "vite preview",
    "lint": "eslint --ext .ts,vue --ignore-path .gitignore .",
    "test": "jest",
    "visualize": "npx vuensight --dir src/"
  },
  "dependencies": {
    "@handsontable/vue3": "^13.1.0",
    "autoprefixer": "^10.4.13",
    "axios": "^1.4.0",
    "handsontable": "^13.1.0",
    "pinia": "^2.0.13",
    "postcss": "^8.4.19",
    "tailwindcss": "^3.2.4",
    "uuid": "^9.0.0",
    "vite-tsconfig-paths": "^4.2.0",
    "vue": "^3.3.4",
    "vue-google-adsense": "^2.0.0",
    "vue-gtag-next": "^1.14.0",
    "vue-i18n": "^9.2.2",
    "vue-scriptx": "^0.2.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.4.0",
    "@types/uuid": "^9.0.3",
    "@types/vue-i18n": "^7.0.0",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "@vitejs/plugin-vue": "^4.2.0",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^11.0.0",
    "@vue/test-utils": "^2.0.0-rc.17",
    "@vue/vue3-jest": "^29.2.0",
    "@vuensight/cli": "^0.1.5",
    "electron": "^25.3.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.6.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-vue": "^9.16.0",
    "husky": "^8.0.0",
    "jest": "^29.6.0",
    "lint-staged": "^13.2.0",
    "prettier": "^3.0.0",
    "sass": "^1.47.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.6",
    "vite": "^4.4.0",
    "vite-plugin-eslint": "^1.3.0",
    "vue-tsc": "^1.8.8"
  },
  "resolutions": {
    "follow-redirects": "^1.14.8",
    "nanoid": "^3.3.3",
    "minimist": "^1.2.6"
  },
  "browserslist": [
    "last 2 years"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,vue}": "eslint --fix"
  }
}
